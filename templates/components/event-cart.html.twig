{% for item in events %}
<div class="p-2 m-3 text-center border rounded-3 col-md-3">
<h5>{{item.name}}</h3>
	<p>
	Speakers of this event : <br>
	{% for speaker in item.speakers %}
		<img src="{{speaker.image}}" width="32" class="rounded-pill shadow-sm">
		{{speaker.fullname}}
	{% endfor %}
	</p>	
</div>
{% endfor %}